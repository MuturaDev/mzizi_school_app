<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ultratude.com.mzizi.uiactivities.GalleryActivity">

        <include
            layout="@layout/content_gallery"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:tooltipText="Siblings"
            app:srcCompat="@drawable/media_gallery_icon"
            app:elevation="20dp"
            app:backgroundTint="@color/transType_green" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
