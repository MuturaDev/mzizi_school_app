<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hanks.library.AnimateCheckBox
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:id="@+id/anim_check_box"
                    app:animDuration="200"
                    app:checkedColor="@color/colorPrimary"
                    app:lineColor="@color/white"
                    app:lineWidth="1.2dp"
                    app:unCheckColor="@color/homeText"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/school_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:text="TRIP TO CAIRO"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:text="dajfldjalfjdlja;fjdafjskdjfajsldfjalsjdflajsdjfa"
                android:textSize="12sp"
                android:textColor="@color/homeText"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:id="@+id/description_text"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <RelativeLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Term"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/homeText"
                    android:textStyle="normal"
                    android:id="@+id/term_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_centerHorizontal="true"
                    android:text="2020"
                    android:textSize="12sp"
                    android:textColor="@color/homeText"
                    android:id="@+id/year_name"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:visibility="visible"
                    android:text="Ksh: 3000/- "
                    android:textSize="13sp"
                    android:textColor="@color/red"
                    android:textStyle="normal"
                    android:id="@+id/trip_price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="13dp"
                android:textStyle="bold"
                android:id="@+id/fee_amount"
                android:textColor="@color/homeText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/action_btn"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:text="Add Fee"
                    android:id="@+id/action_btn_text"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/horizontal_progress"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/label_wait_ID"
                        android:layout_centerInParent="true"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_width="match_parent"
                        android:text="Please wait for confirmation...."
                        android:layout_height="wrap_content" />

                    <ProgressBar

                        android:padding="0dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/pb_login_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/white"
                        android:visibility="visible" />

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>