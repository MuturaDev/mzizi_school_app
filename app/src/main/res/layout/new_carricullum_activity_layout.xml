<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_confirmationMessage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:text="Please select Exam Type, Year and Term."
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/sp_group_layout"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout

                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background_app"
                android:orientation="horizontal"
                android:layout_marginRight="5dp">

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center">

                    <Spinner
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:visibility="visible"
                        android:id="@+id/sp_year_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/pb_newCarriculum_progress_layout_year"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/sp_year_ID">

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="0dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@android:color/holo_blue_dark" />

                        <TextView

                            android:layout_marginStart="0dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:paddingTop="0dp"
                            android:layout_gravity="center_vertical"
                            android:text="Loading..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/image_sp_year_ID"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_selector_bg"
                    android:src="@drawable/down_spinner_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background_app"
                android:orientation="horizontal"
                android:layout_marginRight="5dp">

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center">

                    <Spinner
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:visibility="visible"
                        android:id="@+id/sp_term_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/pb_newCarriculum_progress_layout_term"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/sp_term_ID">

                        <ProgressBar
                            android:id="@+id/progressBar2_term"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="0dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@android:color/holo_blue_dark" />

                        <TextView

                            android:layout_marginStart="0dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:paddingTop="0dp"
                            android:layout_gravity="center_vertical"
                            android:text="Loading..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/image_sp_term_ID"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_selector_bg"
                    android:src="@drawable/down_spinner_icon"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background_app"
                android:orientation="horizontal"
                android:layout_marginRight="5dp">

                <RelativeLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center">

                    <Spinner
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:visibility="visible"
                        android:id="@+id/sp_exam_type_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/pb_newCarriculum_progress_layout_exam_type"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/sp_exam_type_ID">

                        <ProgressBar
                            android:id="@+id/progressBar2_exam_type"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="0dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/colorPrimary" />

                        <TextView

                            android:layout_marginStart="0dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:paddingTop="0dp"
                            android:layout_gravity="center_vertical"
                            android:text="Loading..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/image_sp_exam_type_ID"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_selector_bg"
                    android:src="@drawable/down_spinner_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:id="@+id/txt_confirmationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:id="@+id/pb_loading_txt_newCarriculum_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="invisible">

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/holo_blue_dark" />

                <!--This textview should be annimated in some way-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Loading..."
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/pullToRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="40dp">

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/recycler_newCarriculum_exam_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <TextView

                android:id="@+id/txt_no_exam_progress_toshow_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No Exam Progress Report to show"
                android:textAlignment="center"
                android:textColor="@color/confirmation_success"
                android:textSize="15sp"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>

    <include
        layout="@layout/exam_progress_comments_bottom_sheet_layout"
        />






</androidx.coordinatorlayout.widget.CoordinatorLayout>