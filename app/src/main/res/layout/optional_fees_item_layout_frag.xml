<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Swimming"
                android:textSize="15sp"
                android:textColor="@color/homeText"
                android:textStyle="bold"

                android:id="@+id/fee_name"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Class 5"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/homeText"
                    android:textStyle="normal"
                    android:id="@+id/class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_centerHorizontal="true"
                    android:text="Term 1"
                    android:textSize="12sp"
                    android:textColor="@color/homeText"
                    android:id="@+id/term_name"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="Not Selected"
                    android:textSize="12sp"
                    android:textColor="@color/homeText"
                    android:textStyle="normal"
                    android:id="@+id/current_status"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:text="Ksh: 3000/- "
                android:textSize="13dp"
                android:textStyle="bold"
                android:id="@+id/fee_amount"
                android:textColor="@color/homeText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:id="@+id/action_btn"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:text="Add Fee"
                    android:id="@+id/action_btn_text"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/horizontal_progress"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/label_wait_ID"
                        android:layout_centerInParent="true"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_width="match_parent"
                        android:text="Please wait for confirmation...."
                        android:layout_height="wrap_content" />

                    <ProgressBar

                        android:padding="0dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/pb_login_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/white"
                        android:visibility="visible" />

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>