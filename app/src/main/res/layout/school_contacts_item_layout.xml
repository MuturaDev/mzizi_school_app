<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="4.7">

    <TextView
        android:id="@+id/school_contacts_setting_name"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:text="MPESA paybill number"
        android:textAlignment="textStart"
        android:layout_width="0dp"
        android:layout_weight="1.7"
        android:layout_height="wrap_content"
        android:layout_gravity="start"/>

    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/school_contacts_setting_value"
        android:textSize="12sp"
        android:textColor="@color/homeText"
        android:textAlignment="textStart"
        android:text="P.O. BOX 340, 00217 Limuru, Kenya"
        android:layout_gravity="start"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content" />


</LinearLayout>