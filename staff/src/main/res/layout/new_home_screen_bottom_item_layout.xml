<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    android:id="@+id/item_layout_click"
    android:background="#ffffff">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_width="45dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/cirlce_bg_primary"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/imageicon"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tasks_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/count_data_captured"
                android:layout_alignParentEnd="true"
                android:layout_width="18dp"
                android:background="@drawable/circle_bg_warning"
                android:layout_height="18dp"
                android:text="10"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:visibility="visible"
                android:fontFamily="@font/poppins_regular"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/hometext"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
           android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="Mark \nAttendance"
            android:textColor="@color/libraryColorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</LinearLayout>