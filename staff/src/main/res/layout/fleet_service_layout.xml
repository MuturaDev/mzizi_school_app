<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_marginTop="@dimen/quick_action_size_expand_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:elevation="5dp"

            android:orientation="vertical"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/label_license_plate_ID"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_regular"
                android:text="Vehicle Plate "
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <Spinner
                    android:id="@+id/sp_vehicle_plate_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/round_alight"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/image_vehicle_plate_sp_ID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_down_light_green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>



            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Service Type "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <Spinner
                    android:id="@+id/sp_service_type_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/round_alight"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/image_service_type_sp_ID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_down_light_green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Mileage Before "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/txt_mileage_before_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_alight"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/libraryColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_numbers_light_green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>




            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Next Service Mileage "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />


            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/txt_nextservice_mileage_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_alight"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/libraryColorPrimary"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:text="" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_numbers_light_green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_regular"
                android:text="Service Cost "
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/txt_servicecost_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_alight"
                    android:textColor="@color/libraryColorPrimary"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:text="" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_paper_money_lightgreen"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>



            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date Serviced "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">


                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/txt_dataserviced_ID"
                    android:editable="false"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_alight"
                    android:textColor="@color/libraryColorPrimary"
                    android:textSize="15sp"
                    android:text=""
                    />

                <ImageView
                    android:layout_marginTop="0dp"
                    android:id="@+id/date_image_dateserviced"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_google_calendar_lightgreen"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"/>




            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_marginRight="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/date_background"
                    >




                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_regular"
                android:text="Service Report "
                android:textColor="@color/libraryColorPrimary"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/txt_service_report_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/round_alight"
                    android:textColor="@color/libraryColorPrimary"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:text="" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_pencil_light_green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txt_confirmation_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal"
                android:textColor="@color/confirmation_failure"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible" />



            <androidx.cardview.widget.CardView
                app:cardElevation="2dp"
                android:gravity="end"
                android:id="@+id/btn_save_ID"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingBottom="0dp"
                    android:background="@color/libraryColorPrimary"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center">


                    <TextView

                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@color/libraryColorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Save Details" />

                    <ProgressBar
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/holo_blue_dark"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/pb_fleet_service_progress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        />




                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View android:layout_height="50dp"
                android:background="@color/white"
                android:layout_width="match_parent"/>


        </LinearLayout>

    </ScrollView>


    <include layout="@layout/quick_actions_layout"/>


</RelativeLayout>