<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOT SENT"
        android:id="@+id/sent_status"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:padding="5dp"
        />


    <TextView
        android:id="@+id/invalid"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text=""
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/valid"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:contextClickable="true"
            android:text="Boading"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/holo_blue_dark"


            android:textAllCaps="true"
            android:id="@+id/school_bus"
            android:layout_marginTop="10dp"/>

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barcode_label"
            android:layout_alignParentStart="true"
            android:text="Student Name: "
            android:textColor="@color/dark_blue"
            android:layout_below="@+id/school_bus"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student_name"
            android:layout_toRightOf="@+id/barcode_label"
            android:layout_below="@+id/school_bus"
            android:text="James Mutura Gituma"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            />

        <TextView

            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg No.  :"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/latitude_label"
            android:textColor="@color/dark_blue"
            android:layout_below="@+id/student_name"
            android:layout_toStartOf="@+id/latitude_value"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.3456789 "

            android:id="@+id/latitude_value"
            android:layout_below="@+id/student_name"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class      :    "
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/longitude_label"
            android:layout_below="@+id/student_name"
            android:textColor="@color/dark_blue"

            />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_value"
            android:layout_toRightOf="@+id/longitude_label"
            android:layout_marginRight="120dp"
            android:text=""
            android:textSize="10sp"

            android:layout_below="@+id/student_name"
            />





    </RelativeLayout>




</RelativeLayout>
