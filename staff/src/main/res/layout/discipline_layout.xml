<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:isScrollContainer="true"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_marginTop="@dimen/quick_action_size_expand_cardview"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

       <LinearLayout
           android:paddingLeft="10dp"
           android:orientation="vertical"
            android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"

           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <TextView
               android:id="@+id/label_classstream_ID"
               android:layout_marginTop="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:fontFamily="@font/poppins_regular"
               android:text="Class"
               android:textColor="@color/libraryColorPrimary"
               android:textSize="15sp" />

           <RelativeLayout
               android:layout_weight="2"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:background="@drawable/spinner_background"
               android:orientation="horizontal"
               android:layout_marginRight="10dp">

               <Spinner
                   android:id="@+id/sp_class_stream_ID"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="40dp"
                   android:spinnerMode="dropdown"
                   android:background="@drawable/round_alight"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:gravity="center"
                   />

               <ImageView
                   android:id="@+id/image_class_sp_ID"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                  android:padding="10dp"
                   android:src="@drawable/ic_down_light_green"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   />

           </RelativeLayout>

           <TextView
               android:layout_marginTop="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:text="Student Name "
               android:fontFamily="@font/poppins_regular"
               android:textColor="@color/libraryColorPrimary"
               android:textSize="15sp" />

           <RelativeLayout
               android:layout_weight="2"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:background="@drawable/spinner_background"
               android:orientation="horizontal"
               android:layout_marginRight="10dp">

               <Spinner
                   android:id="@+id/sp_student_name_ID"
                   android:layout_width="match_parent"
                   android:layout_marginLeft="40dp"
                   android:layout_height="match_parent"
                   android:spinnerMode="dropdown"
                   android:background="@drawable/round_alight"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:gravity="center"

                   />

               <ImageView
                   android:id="@+id/image_studentname_sp_ID"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="10dp"

                   android:src="@drawable/ic_down_light_green"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   />

           </RelativeLayout>

           <TextView
               android:layout_marginTop="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:text="Offence "
               android:fontFamily="@font/poppins_regular"
               android:textColor="@color/libraryColorPrimary"
               android:textSize="15sp" />

           <RelativeLayout
               android:layout_weight="2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/spinner_background"
               android:orientation="horizontal"
               android:layout_marginRight="10dp">

               <EditText
                   android:id="@+id/multitxt_offence_ID"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:ems="10"
                   android:paddingLeft="5dp"
                   android:layout_marginLeft="40dp"
                   android:background="@drawable/round_alight"
                   android:textColor="@color/colorPrimary"
                   android:textSize="15sp"
                   android:inputType="textMultiLine"
                   android:text="" />

               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"


                   android:padding="10dp"
                   android:src="@drawable/ic_pencil_light_green"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   />

           </RelativeLayout>

           <TextView
               android:layout_marginTop="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:fontFamily="@font/poppins_regular"
               android:text="Penalty "
               android:textColor="@color/libraryColorPrimary"
               android:textSize="15sp" />

           <RelativeLayout
               android:layout_weight="2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/spinner_background"
               android:orientation="horizontal"
               android:layout_marginRight="10dp">


               <EditText
                   android:id="@+id/multitext_penalty_ID"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:ems="10"
                   android:paddingLeft="5dp"
                   android:layout_marginLeft="40dp"
                   android:background="@drawable/round_alight"
                   android:textColor="@color/colorPrimary"
                   android:textSize="15sp"
                   android:inputType="textMultiLine"
                   android:text=""
                   />


               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"

                   android:padding="10dp"
                   android:src="@drawable/ic_pencil_light_green"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   />

           </RelativeLayout>



           <TextView
               android:layout_marginTop="5dp"
               android:visibility="invisible"
               android:layout_marginEnd="10dp"
               android:gravity="center_horizontal"
               android:id="@+id/label_confirmation_message"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/confirmation_failure"
               android:textSize="15sp"
               android:text="dfadadfadf"/>

           <androidx.cardview.widget.CardView
               app:cardElevation="2dp"
               android:gravity="end"
               android:id="@+id/btn_save_ID"
               app:cardCornerRadius="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="15dp"
               android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <RelativeLayout
                   android:foreground="?android:attr/selectableItemBackground"
                   android:clickable="true"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:paddingBottom="0dp"
                   android:background="@color/libraryColorPrimary"
                   android:paddingLeft="5dp"
                   android:paddingRight="5dp"
                   android:gravity="center">


                   <TextView

                       android:visibility="visible"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:fontFamily="@font/poppins_bold"
                       android:background="@color/libraryColorPrimary"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:text="Save Details" />

                   <ProgressBar
                       android:visibility="gone"
                       android:layout_centerHorizontal="true"
                       android:indeterminate="true"
                       android:indeterminateTint="@android:color/holo_blue_dark"
                       android:layout_gravity="center_horizontal"
                       android:id="@+id/pb_manageDiscipline_progress"
                       style="?android:attr/progressBarStyleLarge"
                       android:layout_width="30dp"
                       android:layout_height="wrap_content"
                       />




               </RelativeLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>



    </ScrollView>

    <include layout="@layout/quick_actions_layout"/>


</RelativeLayout>