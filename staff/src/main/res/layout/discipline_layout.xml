<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:isScrollContainer="true"
    android:fitsSystemWindows="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:background="@drawable/spinner_bg"
           android:paddingLeft="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">



           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal"
               android:weightSum="4">

               <TextView
                   android:id="@+id/label_classstream_ID"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:textStyle="bold"
                   android:text="Class Stream "
                   android:textColor="@android:color/black"
                   android:textSize="15dp" />


               <TextView

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Student Name "
                   android:textStyle="bold"
                   android:textColor="@android:color/black"
                   android:textSize="15sp" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:weightSum="4">


               <RelativeLayout

                   android:layout_weight="2"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:background="@drawable/spinner_background"
                   android:orientation="horizontal"
                   android:layout_marginRight="10dp">

                   <Spinner
                       android:id="@+id/sp_class_stream_ID"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginRight="25dp"
                       android:spinnerMode="dropdown"
                       android:background="@android:color/transparent"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginLeft="5dp"
                       />

                   <ImageView
                       android:id="@+id/image_class_sp_ID"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5"
                       android:src="@drawable/spinner_dropdown_icon"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       />

               </RelativeLayout>



               <RelativeLayout
                   android:layout_weight="2"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:background="@drawable/spinner_background"
                   android:orientation="horizontal"
                   android:layout_marginRight="10dp">

                   <Spinner
                       android:id="@+id/sp_student_name_ID"
                       android:layout_width="match_parent"
                       android:layout_marginRight="25dp"
                       android:layout_height="match_parent"
                       android:spinnerMode="dropdown"
                       android:background="@android:color/transparent"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginLeft="5dp"
                       />

                   <ImageView
                       android:id="@+id/image_studentname_sp_ID"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="0.5"
                       android:src="@drawable/spinner_dropdown_icon"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       />

               </RelativeLayout>



           </LinearLayout>


           <LinearLayout
               android:layout_marginTop="20dp"
               android:padding="20dp"
               android:layout_marginRight="6dp"
               android:layout_marginLeft="2dp"

               android:background="@drawable/offence_bg"
               android:layout_gravity="center_horizontal"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/label_offence_ID"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Offence"
                   android:textAlignment="viewStart"
                   android:textColor="@android:color/black"
                   android:textSize="12sp"
                   />

           <EditText
                   android:layout_marginTop="20dp"
                   android:id="@+id/multitxt_offence_ID"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
               android:textSize="12sp"
                   android:inputType="textMultiLine"
                   android:text="" />

           </LinearLayout>
           <LinearLayout
               android:layout_marginRight="6dp"
               android:layout_marginLeft="2dp"
               android:background="@drawable/offence_bg"
               android:padding="20dp"
               android:layout_marginTop="20dp"
               android:orientation="vertical"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/label_penalty_ID"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Penalty"
                   android:textAlignment="viewStart"
                   android:textColor="@android:color/black"
                   android:textStyle="normal"
                   android:textSize="12sp"/>

               <EditText
                   android:textSize="12sp"
                  android:layout_marginTop="20dp"
                   android:id="@+id/multitext_penalty_ID"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:inputType="textMultiLine"
                   />


           </LinearLayout>


           <TextView
               android:layout_marginTop="5dp"
               android:visibility="invisible"
               android:layout_marginEnd="10dp"
               android:gravity="center_horizontal"
               android:id="@+id/label_confirmation_message"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/confirmation_failure"
               android:textSize="15sp"
               android:text="dfadadfadf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="end"
            android:orientation="horizontal">


            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_alight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center">


                <Button
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:visibility="visible"
                    android:id="@+id/btn_save_ID"
                    android:background="#ffffff"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:text="Save" />

                <ProgressBar
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/holo_blue_dark"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/pb_manageDiscipline_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                     />




            </RelativeLayout>

       </LinearLayout>

       </LinearLayout>



    </ScrollView>













</LinearLayout>