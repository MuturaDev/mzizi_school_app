<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:background="@drawable/disciplinary_cases_item_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingStart="@dimen/padding_left_year_term_section"
                android:paddingEnd="@dimen/padding_right_year_term_section"
                android:layout_toStartOf="@+id/txt_label_year_layout"
                android:background="@drawable/on_duty_bg"
                android:id="@+id/txt_label_term_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingTop="5dp"
                    android:textSize="10sp"
                    android:text="Term :"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:text="3"
                    android:textSize="10sp"
                    android:id="@+id/txt_term_ID"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_toStartOf="@+id/txt_label_date_reported_layout"
                android:paddingStart="@dimen/padding_left_year_term_section"
                android:paddingEnd="@dimen/padding_right_year_term_section"
                android:background="@drawable/on_duty_bg"
                android:id="@+id/txt_label_year_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                   android:paddingTop="5dp"
                    android:textSize="10sp"
                    android:text="Year :"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:textSize="10sp"
                    android:text="2018"
                    android:id="@+id/txt_year_ID"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/padding_left_year_term_section"
                android:paddingEnd="@dimen/padding_right_year_term_section"
                android:background="@drawable/on_duty_bg"
                android:id="@+id/txt_label_date_reported_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:paddingTop="5dp"
                    android:textSize="10sp"
                    android:text="Date Reported :"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:text="30 Oct 2018"
                    android:textSize="10sp"
                    android:id="@+id/txt_date_reported_ID"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#088088"
            android:text="Offence"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_offence_ID"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/offence_text"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textColor="#088088"
            android:text="Penaulty"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_penaulty_ID"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="@string/penaulty_text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginEnd="5dp"
           android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/padding_left_year_term_section"
                android:paddingEnd="@dimen/padding_right_year_term_section"
                android:background="@drawable/on_duty_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:textSize="12sp"
                    android:text="Reported By :"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:text="Mr. WYCLIFFE"
                    android:textSize="12sp"
                    android:id="@+id/txt_reportedby_ID"
                    android:gravity="bottom"
                    android:layout_gravity="end"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>