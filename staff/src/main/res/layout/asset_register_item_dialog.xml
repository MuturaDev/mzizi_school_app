                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_assset_name_label"
                            android:layout_width="wrap_content"
                            android:text="Asset Name :"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_assset_name"
                            android:layout_toRightOf="@+id/txt_assset_name_label"
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                   <RelativeLayout
                       android:layout_marginTop="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/txt_assset_serialnumber_label"
                           android:layout_width="wrap_content"
                           android:text="Asset Serial Number :"
                           android:textStyle="bold"
                           android:layout_height="wrap_content"
                           android:textSize="15sp"
                           />

                       <TextView
                           android:id="@+id/txt_assset_serialnumber"
                           android:layout_toRightOf="@+id/txt_assset_serialnumber_label"
                           android:layout_width="match_parent"
                           android:textAlignment="center"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_marginTop="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/txt_assset_description_label"
                           android:layout_width="wrap_content"
                           android:text="Asset Description :"
                           android:textStyle="bold"
                           android:layout_height="wrap_content"
                           android:textSize="15sp" />

                       <TextView
                           android:id="@+id/txt_assset_description"
                           android:layout_toRightOf="@+id/txt_assset_description_label"
                           android:layout_width="match_parent"
                           android:textStyle="bold"
                           android:textSize="12sp"
                           android:text=""
                           android:textAlignment="center"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_marginTop="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/txt_asset_type_label"
                           android:layout_width="wrap_content"
                           android:text="Asset Type :"
                           android:textStyle="bold"
                           android:layout_height="wrap_content"
                           android:textSize="15sp" />

                       <TextView
                           android:id="@+id/txt_asset_type"
                           android:layout_toRightOf="@+id/txt_asset_type_label"
                           android:layout_width="match_parent"
                           android:textStyle="bold"
                           android:textAlignment="center"
                           android:gravity="center_horizontal"
                           android:layout_height="wrap_content"
                           android:textSize="12sp" />

                   </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="2dp"

            android:background="@drawable/offence_bg"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_offence_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Comment"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/multitxt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                android:text="" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">


            <Button
                android:layout_alignParentStart="true"
                android:id="@+id/btn_cancel"
                android:background="@drawable/round_alight"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:visibility="visible"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="DONE" />


            <Button
                android:layout_alignParentRight="true"
                android:background="@drawable/round_alight"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:visibility="visible"
                android:id="@+id/btn_save"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:text="NEXT" />



        </RelativeLayout>



    </LinearLayout>



</LinearLayout>